import Navigation from '../components/Navigation.astro';
import MobileMenu from '../components/MobileMenu.astro';
import Footer from '../components/Footer.astro';
import fs from 'fs';
import path from 'path';

// Get all PDF files from public/announcements directory
let pdfFiles: { name: string; path: string }[] = [];

try {
  const announcementsDir = path.join(process.cwd(), 'public', 'announcements');
  
  // Check if directory exists, if not create it
  if (!fs.existsSync(announcementsDir)) {
    fs.mkdirSync(announcementsDir, { recursive: true });
  }
  
  const files = fs.readdirSync(announcementsDir);
  pdfFiles = files
    .filter(file => file.toLowerCase().endsWith('.pdf'))
    .map(file => ({
      name: file.replace('.pdf', ''),
      path: `/announcements/${file}`
    }))
    .sort((a, b) => {
      // Helper function to extract and normalize date from filename
      const extractDate = (filename: string): Date | null => {
        // Format: DD.MM.YYYY or D.M.YYYY (e.g., 1.9.2020, 23.12.2025)
        const ddmmyyyyRegex = /(\d{1,2})\.(\d{1,2})\.(\d{4})/;
        // Format: YYYY-MM-DD or YYYY.MM.DD (e.g., 2024-12-25, 2024.12.25)
        const yyyymmddRegex = /(\d{4})[-.](\d{1,2})[-.](\d{1,2})/;
        
        let match = filename.match(ddmmyyyyRegex);
        if (match) {
          const [, day, month, year] = match;
          return new Date(parseInt(year), parseInt(month) - 1, parseInt(day));
        }
        
        match = filename.match(yyyymmddRegex);
        if (match) {
          const [, year, month, day] = match;
          return new Date(parseInt(year), parseInt(month) - 1, parseInt(day));
        }
        
        return null;
      };
      
      const dateA = extractDate(a.name);
      const dateB = extractDate(b.name);
      
      // If both have valid dates, compare them
      if (dateA && dateB) {
        return dateB.getTime() - dateA.getTime(); // Descending order (newest first)
      }
      
      // If only one has a date, prioritize it
      if (dateA) return -1;
      if (dateB) return 1;
      
      // If neither has a date, sort alphabetically descending
      return b.name.localeCompare(a.name);
    });
} catch (error) {
  console.error('Error reading PDF files:', error);
}

const itemsPerPage = 6;
const totalPages = Math.ceil(pdfFiles.length / itemsPerPage);
const remainingItems = pdfFiles.length - itemsPerPage;
